body{font-family: Helvetica, Arial, Verdana, sans-serif !important;}

root { 
    display: block;
}

.logo{
    background-image:  url(logo.png)  ;
    height: 53px;
    width: 134px;
}
.footer {
    text-align: center;
    color:#FFF;
    border-top: 1px solid #e5e5e5;
    background-color: #55555A;
    position: fixed;
    clear:both;
    bottom: 0;
    width: 100%;
}
.right{
    text-align: right;
}
.header_h1
{
    color: #fff!important;
    margin-left: 30px;
}
.light-blue_height{
    height:73px!important;
    line-height:73px!important;
}
.user-info{
    max-width: 110px !important;
    top:13px !important;
}
.page-content_margin_left
{
    margin-left:-190px!important;
}
/* Sidebar Styles */
.line{
    margin-bottom: 10px;
}
#sidebar .widget-box{
    margin-bottom: 30px;
}
#promocodeWidget .widget-body{
    padding: 10px;
}
#sidebar .widget-body label , #sidebar .widget-body input[type="text"] ,  #sidebar .widget-body a{
    display: inline-block;
}
#sidebar .widget-body label{
    width: 100px;
}
#sidebar .widget-body input[type="text"]{
    width: 98px;
}
#sidebar .widget-body a{
    margin-left:5px; 
    font-size : 12px;
}
/* Service Selection Details */
#phoneDetails{
    padding-left : 24px;
}
.users input[type="text"]{
    margin:0 0 10px 10px;
}
.users select.selectPlan{
    width: 173px;
}
.users img{
    margin:0 0 0 0px;
}
/* Payment */
#bill-option-btn{
    text-align: right;
}
#shipping-info ul , #billing-info ul{
    padding-left: 50px;
}
.color_black{
    color: #000 !important;
}

.navbar-container {
        padding-right:0px !important;
}

.devices_list  input[type="radio"] {
margin-left : 0px !important;
float:none !important;
}

.loading{
    position: absolute;
    background: #fff 50%;
    width: 100%;
    height: 100%;
    opacity: 0.7;
    text-align:center;
    vertical-align:middle;
    z-index:1000;
}
.loadingimg
{
   top:15%;
   left:15%;
   width:50%;
   height:50%;
   position:relative;
}




